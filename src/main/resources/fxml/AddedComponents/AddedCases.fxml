<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.cell.TextFieldTableCell ?>

<AnchorPane fx:id="casePane" prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sample.controllers.addedComponentControllers.caseViewController">
   <children>
      <Button fx:id="backToAddedComponents" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#viewSwapper" prefHeight="65.0" prefWidth="125.0" text="Back" />
      <Label layoutX="14.0" layoutY="112.0" text="All added cases">
         <font>
            <Font size="37.0" />
         </font>
      </Label>
      <TableView fx:id="table" layoutX="14.0" layoutY="216.0" prefHeight="618.0" prefWidth="1118.0">
         <columns>
            <TableColumn fx:id="description" prefWidth="75.0" onEditCommit="#editDescription" text="Description">
            <cellValueFactory>
               <PropertyValueFactory property="description" />
            </cellValueFactory>
               <cellFactory>
                  <TextFieldTableCell fx:factory="forTableColumn" />
               </cellFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Price" fx:id="price" onEditCommit="#editPrice">
               <cellValueFactory>
                  <PropertyValueFactory property="price" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" onEditCommit="#editName" text="Name">
               <cellValueFactory>
                  <PropertyValueFactory property="productName" />
               </cellValueFactory>
               <cellFactory>
                  <TextFieldTableCell fx:factory="forTableColumn" />
               </cellFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Manufacturer" onEditCommit="#editManufacturer">
               <cellValueFactory>
                  <PropertyValueFactory property="productionCompany" />
               </cellValueFactory>
               <cellFactory>
                  <TextFieldTableCell fx:factory="forTableColumn" />
               </cellFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Serial number" onEditCommit="#editSerialNumber">
               <cellValueFactory>
                  <PropertyValueFactory property="serialNumber" />
               </cellValueFactory>
               <cellFactory>
                  <TextFieldTableCell fx:factory="forTableColumn" />
               </cellFactory>
            </TableColumn>
            <TableColumn prefWidth="153.0" text="USB ports" onEditCommit="#editUSBports">
               <cellValueFactory>
                  <PropertyValueFactory property="numberOfUSBPorts" />
               </cellValueFactory>
               <cellFactory>
                  <TextFieldTableCell fx:factory="forTableColumn" />
               </cellFactory>
            </TableColumn>
            <TableColumn prefWidth="95.0" text="Audio jacks" onEditCommit="#editAudioJacks">
               <cellValueFactory>
                  <PropertyValueFactory property="HDAudioJacks" />
               </cellValueFactory>
               <cellFactory>
                  <TextFieldTableCell fx:factory="forTableColumn" />
               </cellFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Width" onEditCommit="#editWidth">
               <cellValueFactory>
                  <PropertyValueFactory property="widthCM" />
               </cellValueFactory>
               <cellFactory>
                  <TextFieldTableCell fx:factory="forTableColumn" />
               </cellFactory>
               <cellFactory>
                  <TextFieldTableCell fx:factory="forTableColumn" />
               </cellFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Height" onEditCommit="#editHeight">
               <cellValueFactory>
                  <PropertyValueFactory property="heightCM" />
               </cellValueFactory>
               <cellFactory>
                  <TextFieldTableCell fx:factory="forTableColumn" />
               </cellFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Depth" onEditCommit="#editDepth">
               <cellValueFactory>
                  <PropertyValueFactory property="heightCM" />
               </cellValueFactory>
               <cellFactory>
                  <TextFieldTableCell fx:factory="forTableColumn" />
               </cellFactory>
            </TableColumn>
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button layoutX="1007.0" layoutY="135.0" mnemonicParsing="false" onAction="#deleteCase" prefHeight="46.0" prefWidth="125.0" text="Delete selected" />
      <Button layoutX="857.0" layoutY="135.0" mnemonicParsing="false" prefHeight="46.0" prefWidth="125.0" text="Edit selected" />
   </children>
</AnchorPane>
